<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
<!-- Hibernate session factory -->
<bean id="sessionFactory" 
    class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
 
    <property name="dataSource">
      <ref bean="dataSource"/>
    </property>
 
    <property name="hibernateProperties">
       <props>
         <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>        
         <prop key="hibernate.show_sql">true</prop>
       </props>
    </property>
 
    <property name="mappingResources">
		<list>
         	<value>fsoft/xdev/mock/hibernate/Address.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Contact.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/County.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Country.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Department.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Directorate.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Facility.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/GovOfficeRegion.hbm.xml</value>			
			<value>fsoft/xdev/mock/hibernate/Organisation.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Premise.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Programme.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/ReferenceData.hbm.xml</value>			
			<value>fsoft/xdev/mock/hibernate/Service.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/SupportingMaterial.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Team.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Town.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/TrustDistrict.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/TrustRegion.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/TypeOfBusiness.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Account.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Volunteer.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/ReferenceType.hbm.xml</value>
		</list>
    </property>	
 
</bean>
</beans>