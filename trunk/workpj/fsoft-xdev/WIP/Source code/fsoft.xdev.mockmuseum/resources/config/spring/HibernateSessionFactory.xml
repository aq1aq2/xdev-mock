<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
<!-- Hibernate session factory -->
<bean id="sessionFactory" 
    class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
 
    <property name="dataSource">
      <ref bean="dataSource"/>
    </property>
 
    <property name="hibernateProperties">
       <props>
         <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>        
         <prop key="hibernate.show_sql">true</prop>
       </props>
    </property>
 
    <property name="mappingResources">
		<list>
         	<value>fsoft/xdev/mock/hibernate/Addresses.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Contacts.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Counties.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Countries.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Departments.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Directorates.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Facilities.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/GovtOfficeRegions.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/OrganisationProgramme.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/OrganisationService.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Organisations.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Premises.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Programmes.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/ReferenceData.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/ServicePremise.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Services.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/SupportingMaterials.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Teams.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Towns.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/TrustDistricts.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/TrustRegions.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/TypeOfBusiness.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Users.hbm.xml</value>
			<value>fsoft/xdev/mock/hibernate/Volunteers.hbm.xml</value>
		</list>
    </property>	
 
</bean>
</beans>